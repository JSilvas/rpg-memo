<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base theme -->
    <style name="Theme.Memo" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--
        CRITICAL: Overlay theme for EditorOverlayActivity
        Fully transparent to feel like interacting directly with widget
    -->
    <style name="Theme.Overlay" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Fully transparent window - no dim -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <!-- No animation - instant launch -->
        <item name="android:windowAnimationStyle">@null</item>

        <!-- NO dim - fully transparent -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.0</item>
        <item name="android:windowIsFloating">true</item>

        <!-- No system decorations -->
        <item name="android:windowContentOverlay">@null</item>

        <!-- Samsung One UI optimizations -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>
